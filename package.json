  "main": "app.js",
  "type": "commonjs",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "lint": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "build": "npm run clean && mkdir -p dist && cp -r src/* dist/",
    "clean": "rm -rf dist",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky; fi",
    "check": "npm run lint && npm run format"
  },
