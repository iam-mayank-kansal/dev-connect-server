  "bugs": {
    "url": "https://github.com/iam-mayank-kansal/dev-connect-server/issues"
  },
  "homepage": "https://github.com/iam-mayank-kansal/dev-connect-server#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "imagekit": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6",
